<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/IOScreen"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/topLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/IOScreen"
        tools:layout_editor_absoluteX="73dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOne"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttons"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonTwo"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttons"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonThree"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttons"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDivide"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_round"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondLayer"
        app:layout_constraintTop_toBottomOf="@+id/topLayer"
        android:padding="15dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_margin="10dp"
            android:id="@+id/buttonFour"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_margin="10dp"
            android:id="@+id/buttonFive"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_margin="10dp"
            android:id="@+id/buttonSix"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_margin="10dp"
            android:id="@+id/buttonMul"
            android:background="@drawable/button_round"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdLayer"
        app:layout_constraintTop_toBottomOf="@+id/secondLayer"
        android:padding="20dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_margin="10dp"
            android:id="@+id/buttonSeven"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_margin="10dp"
            android:id="@+id/buttonEight"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_margin="10dp"
            android:id="@+id/buttonNine"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_margin="10dp"
            android:id="@+id/buttonSubtract"
            android:background="@drawable/button_round"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fourthLayer"
        app:layout_constraintTop_toBottomOf="@+id/thirdLayer"
        android:padding="20dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="10dp"
            android:id="@+id/buttonZero"
            android:background="@drawable/buttons"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_margin="10dp"
            android:id="@+id/buttonClear"
            android:background="@drawable/operatorbutton"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_margin="10dp"
            android:id="@+id/buttonEquals"
            android:background="@drawable/operatorbutton"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_margin="10dp"
            android:id="@+id/buttonAddition"
            android:background="@drawable/button_round"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthLayer" />
</androidx.constraintlayout.widget.ConstraintLayout>